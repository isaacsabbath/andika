# Django Settings
SECRET_KEY=your-secret-key-here
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.azurewebsites.net

# Database Options: sqlite, postgresql, azure-sql
DB_ENGINE=sqlite

# For Azure SQL Database (when DB_ENGINE=azure-sql)
DATABASE_NAME=your-database-name
DATABASE_USER=your-username
DATABASE_PASSWORD=your-password
DATABASE_HOST=your-server.database.windows.net
DATABASE_PORT=1433

# For PostgreSQL (when DB_ENGINE=postgresql)
# DATABASE_NAME=your-database-name
# DATABASE_USER=your-username
# DATABASE_PASSWORD=your-password
# DATABASE_HOST=your-server.postgres.database.azure.com
# DATABASE_PORT=5432
